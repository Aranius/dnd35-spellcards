<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <AssemblyName>SpellCards</AssemblyName>
    <RootNamespace>SpellCards</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="assets\fonts\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AngleSharp" Version="1.4.0" />
    <PackageReference Include="HtmlAgilityPack" Version="1.12.4" />
    <PackageReference Include="QuestPDF" Version="2025.12.0" />
    <PackageReference Include="SkiaSharp" Version="2.88.7" />
  </ItemGroup>

	<ItemGroup>
		<None Update="requests.txt" CopyToOutputDirectory="PreserveNewest" />
		<None Update="settings.json" CopyToOutputDirectory="PreserveNewest" />
	</ItemGroup>

	<ItemGroup>
		<None Include="assets\fonts\*.ttf" CopyToOutputDirectory="PreserveNewest" />
		<None Include="assets\icons\*.svg" CopyToOutputDirectory="PreserveNewest" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Remove="Requests\**" />
	  <EmbeddedResource Remove="Requests\**" />
	  <None Remove="Requests\**" />
	</ItemGroup>


</Project>
